---
interface Props {
  title: string;
  description: string;
  icon: string;
  technologies: string[];
}

const { title, description, icon, technologies } = Astro.props;
---

<div class="bg-card rounded-lg overflow-hidden border border-border">
  <div class="h-48 bg-primary/10 flex items-center justify-center">
    <Fragment set:html={icon} />
  </div>
  <div class="p-4">
    <h3 class="text-xl font-medium mb-2">{title}</h3>
    <p class="text-muted-foreground mb-4">
      {description}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        technologies.map((tech) => (
          <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded-md">
            {tech}
          </span>
        ))
      }
    </div>
  </div>
</div>
