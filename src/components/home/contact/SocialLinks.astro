---
interface SocialLink {
  icon: string;
  href: string;
}

interface Props {
  title?: string;
  links: SocialLink[];
}

const { title = "关注我们", links } = Astro.props;
---

<div class="mt-6 pt-6 border-t border-border">
  <h3 class="text-lg font-medium mb-4">{title}</h3>
  <div class="flex gap-4">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center text-primary hover:bg-primary/20 transition-colors"
        >
          <Fragment set:html={link.icon} />
        </a>
      ))
    }
  </div>
</div>
